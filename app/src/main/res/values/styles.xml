<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextView.Title" parent="TextView">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/textsize_32sp</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/textsize_24sp</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:textColor">@color/textSecondaryColor</item>
    </style>

    <style name="TextView.Small.Error">
        <item name="android:textColor">@color/textErrorColor</item>
    </style>

    <style name="TextView.Orange">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextView.Orange.Medium">
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextView.Rating">
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:drawablePadding">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/textRating</item>
        <item name="drawableStartCompat">@drawable/ic_rating_star</item>
    </style>

    <style name="TextView.RatingRound">
        <item name="android:drawablePadding">@dimen/margin_2dp</item>
        <item name="android:background">@drawable/bg_rating_circle</item>
        <item name="android:textSize">@dimen/textsize_12sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="drawableTopCompat">@drawable/ic_rating_star_white</item>
    </style>

    <style name="TextView.Price">
        <item name="android:background">@drawable/bg_mission_price</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/margin_28dp</item>
        <item name="android:paddingEnd">@dimen/margin_28dp</item>
        <item name="android:paddingTop">@dimen/margin_8dp</item>
        <item name="android:paddingBottom">@dimen/margin_8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextView.Price.Cancelled">
        <item name="android:background">@drawable/bg_mission_cancelled</item>
        <item name="android:textColor">@color/textColorCanceled</item>
        <item name="android:paddingStart">@dimen/margin_12dp</item>
        <item name="android:paddingEnd">@dimen/margin_12dp</item>
    </style>

    <style name="TextView.Price.Approved">
        <item name="android:background">@drawable/bg_mission_approved</item>
        <item name="android:textColor">@color/textColorApproved</item>
        <item name="android:paddingStart">@dimen/margin_12dp</item>
        <item name="android:paddingEnd">@dimen/margin_12dp</item>
    </style>

    <style name="TextView.Price.InProgress">
        <item name="android:background">@drawable/bg_mission_price</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingStart">@dimen/margin_12dp</item>
        <item name="android:paddingEnd">@dimen/margin_12dp</item>
    </style>

    <style name="TextView.Price.Pending">
        <item name="android:background">@drawable/bg_mission_pending</item>
        <item name="android:textColor">@color/textColorPending</item>
        <item name="android:paddingStart">@dimen/margin_12dp</item>
        <item name="android:paddingEnd">@dimen/margin_12dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Button.Welcome">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Black">
        <item name="android:backgroundTint">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/margin_16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/btn_corner_radius_small</item>
        <item name="android:stateListAnimator">@xml/animate_fade</item>
    </style>

    <style name="Button.White">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="cornerRadius">@dimen/btn_corner_radius_small</item>
        <item name="android:stateListAnimator">@xml/animate_fade</item>
    </style>

    <style name="Button.White.Bordered" parent="Button.White">
        <item name="strokeColor">@color/textColor</item>
        <item name="strokeWidth">@dimen/btn_border_width</item>
    </style>

    <style name="Button.Accent" parent="Button.Black">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Button.Accent.AutoSizeText">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMinTextSize">@dimen/textsize_12sp</item>
        <item name="autoSizeMaxTextSize">@dimen/textsize_16sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Button.Black.Round">
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
    </style>

    <style name="Button.Accent.Round" parent="Button.Black.Round">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Button.Warning.Round" parent="Button.Black.Round">
        <item name="android:backgroundTint">@color/textErrorColor</item>
        <item name="cornerRadius">@dimen/btn_corner_radius_big</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">1</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.Cleaner">
        <item name="cornerRadius">@dimen/btn_corner_radius_small</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
    </style>

    <style name="Button.Cleaner.Gold">
        <item name="backgroundTint">@color/colorCleanerGold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Toggle">
        <item name="backgroundTint">@color/bg_toggle_group</item>
        <item name="elevation">0dp</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/btn_corner_radius_small</item>
        <item name="android:textColor">@color/text_toggle_group</item>
    </style>

    <style name="EditTextBg">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">@dimen/btn_corner_radius</item>
        <item name="cardElevation">@dimen/edit_text_elevation</item>
    </style>

    <style name="CardViewBg">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/edit_text_elevation</item>
    </style>

    <style name="EditText">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:paddingTop">@dimen/margin_12dp</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:paddingStart">@dimen/margin_16dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingEnd">@dimen/margin_16dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoNetworkDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DatePickerStyleOverlay" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/DatePickerStyle</item>
        <item name="colorPrimary">@color/bgBlack</item>
    </style>

    <style name="DatePickerStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/bgBlack</item>
    </style>

    <style name="Checkbox">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="Checkbox.Text">
        <item name="android:paddingStart">@dimen/margin_12dp</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="CalenderViewHeaderCustomText" parent="">
        <item name="android:textColor">@color/bgBlack</item>
        <item name="android:textSize">@dimen/textsize_20sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="">
        <item name="android:textColor">@color/bgBlack</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:textColor">@color/text_color_for_calendar_dates</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <color name="colorCleanerGold">#ECCB4E</color>
</resources>
